# Nextcloud Standalone Environment Variables
# Copy this file to .env and update the values

# Nextcloud Settings
NEXTCLOUD_PORT=8080

# Nextcloud Admin Settings
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=passw0rd

# Database Settings
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_DATABASE=db01
MYSQL_USER=user01
MYSQL_PASSWORD=passw0rd

# Nextcloud Database Settings
MYSQL_HOST=mariadb
MYSQL_DATABASE=db01
MYSQL_USER=user01
MYSQL_PASSWORD=passw0rd

# Redis Settings
REDIS_HOST=redis
REDIS_HOST_PORT=6379

# Optional Settings
# NEXTCLOUD_TRUSTED_DOMAINS=example.com
# NEXTCLOUD_UPLOAD_MAX_FILESIZE=4G
