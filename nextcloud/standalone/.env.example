# Container Names
NEXTCLOUD_CONTAINER_NAME=nextcloud
MARIADB_CONTAINER_NAME=nextcloud-mariadb
REDIS_CONTAINER_NAME=nextcloud-redis

# Volume Names
NXC_ROOT_VOLUME=nxc_root
NXC_APPS_VOLUME=nxc_apps
NXC_DATA_VOLUME=nxc_data
NXC_THEMES_VOLUME=nxc_themes
