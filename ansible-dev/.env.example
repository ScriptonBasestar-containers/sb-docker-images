# Ansible Development Environment Configuration
# Copy this file to .env and customize the values
# Note: Ansible-dev is a command-line tool, not a long-running service

# ====================
# Project Settings
# ====================
PROJECT_NAME=ansible-dev
TZ=Asia/Seoul

# ====================
# Ansible Version
# ====================
# Ansible version (set during image build)
ANSIBLE_VERSION=2.18

# ====================
# Ansible Configuration
# ====================
# Fact gathering mode (implicit, explicit, smart)
ANSIBLE_GATHERING=smart

# SSH host key checking (true/false)
ANSIBLE_HOST_KEY_CHECKING=false

# Enable retry files (true/false)
ANSIBLE_RETRY_FILES_ENABLED=false

# Ansible roles path
ANSIBLE_ROLES_PATH=/ansible/playbooks/roles

# Enable SSH pipelining for performance
ANSIBLE_SSH_PIPELINING=True

# Custom module library path
ANSIBLE_LIBRARY=/ansible/library

# ====================
# SSH Configuration
# ====================
# SSH connection timeout (seconds)
# ANSIBLE_TIMEOUT=10

# SSH user for remote connections
# ANSIBLE_REMOTE_USER=root

# SSH private key file
# ANSIBLE_PRIVATE_KEY_FILE=/root/.ssh/id_rsa

# Use SSH agent
# ANSIBLE_SSH_ARGS=-o ForwardAgent=yes

# ====================
# Execution Configuration
# ====================
# Number of parallel processes
# ANSIBLE_FORKS=5

# Verbosity level (0-4, or use -v, -vv, -vvv, -vvvv flags)
# ANSIBLE_VERBOSITY=0

# Check mode (dry run)
# ANSIBLE_CHECK_MODE=false

# Diff mode (show changes)
# ANSIBLE_DIFF_MODE=false

# ====================
# AWS Configuration (Optional)
# ====================
# AWS access key
# AWS_ACCESS_KEY_ID=your-access-key

# AWS secret key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# AWS region
# AWS_DEFAULT_REGION=us-east-1

# ====================
# Editor Configuration
# ====================
# Default text editor
EDITOR=nano

# ====================
# Volume Paths (Local)
# ====================
# Playbooks directory (local path)
PLAYBOOKS_PATH=./playbooks

# SSH keys directory (local path)
SSH_KEYS_PATH=~/.ssh

# Ansible roles directory (local path)
# ROLES_PATH=./roles

# Inventory directory (local path)
# INVENTORY_PATH=./inventory

# ====================
# Container Configuration
# ====================
# Container name (for docker run)
ANSIBLE_CONTAINER_NAME=ansible-dev

# Image name
ANSIBLE_IMAGE_NAME=ansible-dev:latest

# ====================
# Usage Examples
# ====================
# This file provides environment variable documentation for Ansible-dev.
# Ansible-dev is typically run as a one-off command, not a service.
#
# Basic usage:
# docker run --rm \
#   -v $(pwd):/playbooks \
#   -v ~/.ssh:/root/.ssh:ro \
#   ansible-dev site.yml
#
# With environment variables:
# docker run --rm \
#   -e ANSIBLE_HOST_KEY_CHECKING=true \
#   -e ANSIBLE_GATHERING=explicit \
#   -v $(pwd):/playbooks \
#   -v ~/.ssh:/root/.ssh:ro \
#   ansible-dev site.yml -i inventory/hosts
#
# With AWS credentials:
# docker run --rm \
#   -e AWS_ACCESS_KEY_ID=your-key \
#   -e AWS_SECRET_ACCESS_KEY=your-secret \
#   -v $(pwd):/playbooks \
#   ansible-dev aws-playbook.yml
#
# Interactive shell:
# docker run --rm -it \
#   -v $(pwd):/playbooks \
#   -v ~/.ssh:/root/.ssh:ro \
#   --entrypoint /bin/bash \
#   ansible-dev
#
# Check mode (dry run):
# docker run --rm \
#   -v $(pwd):/playbooks \
#   ansible-dev site.yml --check
#
# With inventory file:
# docker run --rm \
#   -v $(pwd):/playbooks \
#   ansible-dev -i inventory/production site.yml
#
# With extra variables:
# docker run --rm \
#   -v $(pwd):/playbooks \
#   ansible-dev site.yml -e "version=1.2.3 env=production"
#
# ====================
# Security Note
# ====================
# ⚠️ Security recommendations:
# - Mount SSH keys as read-only (:ro)
# - Use SSH agent forwarding for better security
# - Enable host key checking in production
# - Use Ansible Vault for sensitive data
# - Rotate AWS credentials regularly
# - Limit playbook access with proper file permissions
# - Use specific user accounts instead of root
#
# Ansible Vault usage:
# - Encrypt sensitive files:
#   docker run --rm -it -v $(pwd):/playbooks --entrypoint ansible-vault ansible-dev encrypt secrets.yml
#
# - Decrypt files:
#   docker run --rm -it -v $(pwd):/playbooks --entrypoint ansible-vault ansible-dev decrypt secrets.yml
#
# - Run playbook with vault:
#   docker run --rm -v $(pwd):/playbooks ansible-dev site.yml --ask-vault-pass
#
# Build custom image:
# docker build -t ansible-dev -f alpine/Dockerfile .
#
# Directory structure:
# playbooks/
# ├── site.yml
# ├── inventory/
# │   ├── production
# │   └── staging
# ├── group_vars/
# ├── host_vars/
# └── roles/
#
