# Joomla Standalone Environment Variables
# Copy this file to .env and update the values

# Joomla Settings
JOOMLA_PORT=8080

# Database Settings
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_DATABASE=db01
MYSQL_USER=user01
MYSQL_PASSWORD=passw0rd

# Joomla Database Settings
JOOMLA_DB_HOST=mariadb
JOOMLA_DB_USER=user01
JOOMLA_DB_PASSWORD=passw0rd
JOOMLA_DB_NAME=db01

# Joomla Admin Settings
JOOMLA_SITE_NAME=Joomla
JOOMLA_ADMIN_USER=Joomla Hero
JOOMLA_ADMIN_USERNAME=joomla
JOOMLA_ADMIN_PASSWORD=joomla@secured
JOOMLA_ADMIN_EMAIL=joomla@example.com

# Container Names
JOOMLA_CONTAINER_NAME=joomla
MARIADB_CONTAINER_NAME=joomla-mariadb
REDIS_CONTAINER_NAME=joomla-redis

# Volume Names
JOOMLA_DATA_VOLUME=joomla-data
MARIADB_DATA_VOLUME=mariadb-data
REDIS_DATA_VOLUME=redis-data
