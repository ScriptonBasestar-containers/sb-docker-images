# Flarum Standalone Environment Configuration
# Copy this file to .env and customize the values
#
# This is a complete standalone setup including MariaDB and Redis

# ====================
# Project Settings
# ====================
PROJECT_NAME=flarum
TZ=Asia/Seoul

# ====================
# Port Configuration
# ====================
# Flarum web port
FLARUM_PORT=8140

# ====================
# Database Configuration (MariaDB)
# ====================
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_DATABASE=db01
MYSQL_USER=user01
MYSQL_PASSWORD=passw0rd

# Flarum Database Settings
DB_HOST=mariadb
DB_NAME=db01
DB_USER=user01
DB_PASS=passw0rd
DB_PREF=flarum_
DB_PORT=3306

# ====================
# Flarum Configuration
# ====================
FORUM_URL=http://localhost:8140
FLARUM_TITLE=Flarum Forum

# Admin Account
FLARUM_ADMIN_USER=admin
FLARUM_ADMIN_PASS=password
FLARUM_ADMIN_MAIL=admin@example.com

# ====================
# Container Names
# ====================
FLARUM_CONTAINER_NAME=flarum
MARIADB_CONTAINER_NAME=flarum-mariadb
REDIS_CONTAINER_NAME=flarum-redis

# ====================
# Volume Names
# ====================
FLARUM_DATA_VOLUME=flarum-data
MARIADB_DATA_VOLUME=mariadb-data
REDIS_DATA_VOLUME=redis-data

# ====================
# Security Note
# ====================
# ⚠️ IMPORTANT: Change all passwords before using in production!
# - MYSQL_PASSWORD
# - MYSQL_ROOT_PASSWORD
# - FLARUM_ADMIN_PASS
#
# Generate secure passwords:
#   openssl rand -base64 32
