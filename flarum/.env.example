# Flarum Environment Configuration
# Copy this file to .env and customize the values

# ====================
# Project Settings
# ====================
PROJECT_NAME=flarum
TZ=Asia/Seoul

# ====================
# Port Configuration
# ====================
# Flarum web port
FLARUM_PORT=8140

# phpMyAdmin port
PHPMYADMIN_PORT=8081

# MailHog web UI port
MAILHOG_PORT=8025

# ====================
# Database Configuration (MariaDB)
# ====================
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_DATABASE=db01
MYSQL_USER=user01
MYSQL_PASSWORD=passw0rd

# Flarum Database Settings
DB_HOST=mariadb
DB_NAME=db01
DB_USER=user01
DB_PASS=passw0rd
DB_PREF=flarum_
DB_PORT=3306

# ====================
# Flarum Configuration
# ====================
FORUM_URL=http://localhost:8080
FLARUM_TITLE=Flarum Forum

# Admin Account
FLARUM_ADMIN_USER=admin
FLARUM_ADMIN_PASS=password
FLARUM_ADMIN_MAIL=admin@example.com

# ====================
# phpMyAdmin Settings
# ====================
PMA_HOST=mariadb
PMA_USER=root
PMA_PASSWORD=rootpass

# ====================
# Container Names
# ====================
FLARUM_CONTAINER_NAME=flarum
MARIADB_CONTAINER_NAME=flarum-mariadb
PHPMYADMIN_CONTAINER_NAME=flarum-phpmyadmin
MAILHOG_CONTAINER_NAME=flarum-mailhog

# ====================
# Volume Names
# ====================
FLARUM_DATA_VOLUME=flarum-data
MARIADB_DATA_VOLUME=mariadb-data

# ====================
# Security Note
# ====================
# ⚠️ IMPORTANT: Change all passwords before using in production!
# - MYSQL_PASSWORD
# - MYSQL_ROOT_PASSWORD
# - FLARUM_ADMIN_PASS
