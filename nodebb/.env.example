# NodeBB Environment Configuration
# Copy this file to .env and customize the values

# ====================
# Project Settings
# ====================
PROJECT_NAME=nodebb
TZ=Asia/Seoul

# ====================
# Port Configuration
# ====================
# NodeBB web port
WEB_PORT=4567

# ====================
# Database Configuration (PostgreSQL)
# ====================
POSTGRES_DB=nodebb
POSTGRES_USER=nodebb
POSTGRES_PASSWORD=nodebb_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ====================
# Redis Configuration
# ====================
REDIS_HOST=redis
REDIS_PORT=6379

# ====================
# NodeBB Configuration
# ====================
NODE_ENV=production
NODEBB_URL=http://localhost:4567

# ====================
# Security Note
# ====================
# ⚠️ IMPORTANT: Change all passwords before using in production!
# - POSTGRES_PASSWORD
