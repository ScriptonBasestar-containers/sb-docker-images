# Koel Environment Variables
# Copy this file to .env and update the values
#
# Koel is a personal music streaming server
# See: https://koel.dev/

# ============================================================================
# Koel Version
# ============================================================================
KOEL_VERSION=7.0.9
# Koel release version
# Check releases: https://github.com/koel/koel/releases

PHP_VERSION=8.2
# PHP version for the container

# ============================================================================
# Network Configuration
# ============================================================================
KOEL_PORT=8290
# Port to expose Koel web interface

APP_URL=http://localhost:8290
# Full URL to access Koel (include port if not 80/443)

# ============================================================================
# Application Configuration
# ============================================================================
APP_KEY=base64:GENERATE_A_RANDOM_KEY
# Laravel application key
# !! GENERATE A KEY: php artisan key:generate --show !!
# Or use: openssl rand -base64 32

APP_ENV=production
# Environment: local, production

APP_DEBUG=false
# Debug mode (set to true for development)

# ============================================================================
# Database Configuration
# ============================================================================
DB_CONNECTION=mysql
# Database driver

DB_HOST=db
# Database hostname (use 'db' for included MariaDB)

DB_PORT=3306
# Database port

DB_DATABASE=koel
# Database name

DB_USERNAME=koel
# Database username

DB_PASSWORD=koel_password
# Database password
# !! CHANGE THIS IN PRODUCTION !!

MARIADB_ROOT_PASSWORD=root_password
# MariaDB root password
# !! CHANGE THIS IN PRODUCTION !!

# ============================================================================
# Music Library Configuration
# ============================================================================
MUSIC_PATH=./music
# Path to your music library on the host
# This will be mounted read-only in the container

# ============================================================================
# Streaming Configuration
# ============================================================================
STREAMING_METHOD=php
# Streaming method: php, x-sendfile, x-accel-redirect
# php: Works everywhere but slower
# x-sendfile: Apache with mod_xsendfile
# x-accel-redirect: Nginx (recommended for performance)

# ============================================================================
# Cache Configuration
# ============================================================================
CACHE_DRIVER=redis
# Cache driver: file, redis, memcached

REDIS_HOST=redis
# Redis hostname

REDIS_PORT=6379
# Redis port

# ============================================================================
# Docker Configuration
# ============================================================================
DOCKER_REPONAME=scriptonbasestar
# Docker repository name

# ============================================================================
# SETUP INSTRUCTIONS
# ============================================================================
# 1. Copy this file to .env:
#    cp .env.example .env
#
# 2. Generate APP_KEY:
#    docker compose run --rm koel php artisan key:generate --show
#    Copy the output to APP_KEY in .env
#
# 3. Update passwords:
#    - DB_PASSWORD
#    - MARIADB_ROOT_PASSWORD
#
# 4. Set your music path:
#    MUSIC_PATH=/path/to/your/music
#
# 5. Start the services:
#    make up
#
# 6. Initialize database:
#    docker compose exec koel php artisan koel:init --no-interaction
#
# 7. Create admin user:
#    docker compose exec koel php artisan koel:admin:create
#
# 8. Scan your music library:
#    docker compose exec koel php artisan koel:sync
#
# 9. Access Koel:
#    http://localhost:8290
#
# ============================================================================
# SUPPORTED AUDIO FORMATS
# ============================================================================
# Koel supports these audio formats via ffmpeg:
# - MP3 (.mp3)
# - FLAC (.flac)
# - AAC (.aac, .m4a)
# - OGG Vorbis (.ogg)
# - WAV (.wav)
# - WMA (.wma)
#
# Transcoding is handled automatically when needed.
