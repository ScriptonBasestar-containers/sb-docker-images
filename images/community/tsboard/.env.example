# TSBoard Environment Variables
# Copy this file to .env and update the values
#
# TSBoard is a modern TypeScript-based community board
# See: https://github.com/sirini/tsboard

# ============================================================================
# Web Server Settings
# ============================================================================
TSBOARD_FRONTEND_PORT=8910
# Default: 8910 (recommended port for TSBoard frontend)
# Change this if you need to avoid port conflicts

TSBOARD_BACKEND_PORT=3100
# Backend API port

# ============================================================================
# Database Configuration (MySQL)
# ============================================================================
MYSQL_ROOT_PASSWORD=example
# WARNING: Change this in production!

MYSQL_DATABASE=tsboard
MYSQL_USER=tsboard
MYSQL_PASSWORD=passw0rd
# WARNING: Change these credentials in production!

DATABASE_URL=mysql://tsboard:passw0rd@db:3306/tsboard
# Database connection string for backend

# MySQL Port (exposed)
MYSQL_PORT=3306
# Change if you need to avoid port conflicts with other MySQL instances

# ============================================================================
# Container Names
# ============================================================================
TSBOARD_FRONTEND_CONTAINER=tsboard-frontend
TSBOARD_BACKEND_CONTAINER=tsboard-backend
MYSQL_CONTAINER_NAME=tsboard-mysql

# ============================================================================
# Volume Names
# ============================================================================
MYSQL_DATA_VOLUME=tsboard-mysql-data

