# Solidus Environment Configuration
# Copy this file to .env and customize

PROJECT_NAME=solidus
TZ=Asia/Seoul

# Port
SOLIDUS_PORT=8410

# Rails
RAILS_ENV=development
SECRET_KEY_BASE=change-me-secret-min-128-chars

# PostgreSQL
DATABASE_URL=postgresql://postgres:password@postgres/solidus_development
POSTGRES_PASSWORD=change-me-strong-password

# Redis
REDIS_URL=redis://redis:6379/0

# Payment Gateway (optional)
# STRIPE_PUBLISHABLE_KEY=pk_test_
# STRIPE_SECRET_KEY=sk_test_

# S3 (optional)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET_NAME=

# SMTP (optional)
# SMTP_SERVER=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=

# References:
# - Solidus: https://solidus.io/
# - Port guide: ../docs/PORT_STATUS.md
