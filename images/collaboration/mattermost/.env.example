# Mattermost - Team Collaboration Platform
# Copy this file to .env and update the values
#
# Official Documentation: https://docs.mattermost.com/
# Docker Hub: https://hub.docker.com/r/mattermost/mattermost-team-edition

# ============================================================================
# Application Configuration
# ============================================================================
MATTERMOST_VERSION=latest
# Mattermost version (e.g., 9.5, latest)
# See: https://hub.docker.com/r/mattermost/mattermost-team-edition/tags

WEB_PORT=8350
# Web UI port
# Default: 8350

SITE_URL=http://localhost:8350
# Site URL for Mattermost
# IMPORTANT: Change this in production to your actual domain
# Example: https://chat.example.com

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_VERSION=16-alpine
# PostgreSQL version
# Default: 16-alpine

DB_NAME=mattermost
# Database name
# Default: mattermost

DB_USER=mmuser
# Database user
# Default: mmuser

DB_PASSWORD=changeme
# Database password
# SECURITY: Change this password in production!

# ============================================================================
# Advanced Configuration (Optional)
# ============================================================================
# MM_SERVICESETTINGS_ENABLEBOTACCOUNTCREATION=true
# MM_SERVICESETTINGS_ENABLEUSERACCESSTOKENS=true
# MM_TEAMSETTINGS_MAXUSERSPERTEAM=50
