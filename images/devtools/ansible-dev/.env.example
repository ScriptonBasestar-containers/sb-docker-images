# Ansible Development Environment Configuration
# Copy this file to .env and customize as needed

# Container Configuration
CONTAINER_NAME=ansible-dev

# Ansible Version
ANSIBLE_VERSION=2.18

# Ansible Configuration
# Fact gathering mode: implicit, explicit, smart
ANSIBLE_GATHERING=smart

# Disable SSH host key verification (development only)
# Set to 'true' in production for security
ANSIBLE_HOST_KEY_CHECKING=false

# Disable retry files creation
ANSIBLE_RETRY_FILES_ENABLED=false

# Ansible roles path
ANSIBLE_ROLES_PATH=/ansible/playbooks/roles

# Enable SSH pipelining for better performance
ANSIBLE_SSH_PIPELINING=True

# Custom module library path
ANSIBLE_LIBRARY=/ansible/library

# Default editor for editing files
EDITOR=nano

# AWS Configuration (optional, for boto3)
# Uncomment and set if you need AWS access
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_DEFAULT_REGION=us-east-1

# Ansible Vault Password (optional)
# ANSIBLE_VAULT_PASSWORD_FILE=/playbooks/.vault_pass
