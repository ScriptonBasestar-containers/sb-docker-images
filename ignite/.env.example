# Apache Ignite Environment Variables
# Copy this file to .env and update the values

# Ignite Settings
IGNITE_THIN_CLIENT_PORT=10800
IGNITE_REST_PORT=11211
IGNITE_DISCOVERY_PORT=47100
IGNITE_COMMUNICATION_PORT=47500

# Ignite JVM Settings
JVM_OPTS=-Xms512m -Xmx512m

# Ignite Work Directory
IGNITE_WORK_DIR=/persistence

# Ignite Optional Libraries
# Available: ignite-rest-http,ignite-spring,ignite-indexing,ignite-ml,ignite-kubernetes
OPTION_LIBS=ignite-rest-http

# Container Name
IGNITE_CONTAINER_NAME=ignite

# Volume Names
IGNITE_PERSISTENCE_VOLUME=ignite-persistence
IGNITE_WORK_VOLUME=ignite-work
