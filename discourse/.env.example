# Discourse Environment Configuration
# Copy this file to .env and customize the values

# ====================
# Project Settings
# ====================
PROJECT_NAME=discourse
TZ=Asia/Seoul

# ====================
# Port Configuration
# ====================
# Discourse web port
WEB_PORT=8080

# ====================
# Database Configuration (PostgreSQL)
# ====================
POSTGRES_DB=discourse
POSTGRES_USER=discourse
POSTGRES_PASSWORD=discourse_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ====================
# Redis Configuration
# ====================
REDIS_HOST=redis
REDIS_PORT=6379

# ====================
# Discourse Configuration
# ====================
LANG=en_US.UTF-8
RAILS_ENV=production

# Site Configuration
DISCOURSE_HOSTNAME=localhost
DISCOURSE_DEVELOPER_EMAILS=admin@example.com

# Database Settings
DISCOURSE_DB_HOST=postgres
DISCOURSE_DB_PORT=5432
DISCOURSE_DB_NAME=discourse
DISCOURSE_DB_USERNAME=discourse
DISCOURSE_DB_PASSWORD=discourse_password

# Redis Settings
DISCOURSE_REDIS_HOST=redis
DISCOURSE_REDIS_PORT=6379

# ====================
# Optional: SMTP Email Configuration
# ====================
# Uncomment and configure to enable email
# DISCOURSE_SMTP_ADDRESS=smtp.example.com
# DISCOURSE_SMTP_PORT=587
# DISCOURSE_SMTP_USER_NAME=user@example.com
# DISCOURSE_SMTP_PASSWORD=your-password
# DISCOURSE_SMTP_ENABLE_START_TLS=true

# ====================
# Container Names
# ====================
DISCOURSE_CONTAINER_NAME=discourse
POSTGRES_CONTAINER_NAME=discourse-postgres
REDIS_CONTAINER_NAME=discourse-redis

# ====================
# Volume Names
# ====================
DISCOURSE_DATA_VOLUME=discourse-data
POSTGRES_DATA_VOLUME=postgres-data
REDIS_DATA_VOLUME=redis-data

# ====================
# Security Note
# ====================
# ⚠️ IMPORTANT: Change all passwords before using in production!
# - POSTGRES_PASSWORD
# - DISCOURSE_DB_PASSWORD
# - DISCOURSE_SMTP_PASSWORD
